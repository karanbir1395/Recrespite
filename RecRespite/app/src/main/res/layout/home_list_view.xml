<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/eventImage"
        />
    <TextView
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:id="@+id/eventTitle"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/eventImage"
        android:layout_toEndOf="@+id/eventImage" />
    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/eventAddress"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:layout_alignRight="@+id/eventTitle"
        android:layout_alignEnd="@+id/eventTitle" />
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"

        android:id="@+id/eventDate"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/eventImage"
        android:layout_alignLeft="@+id/eventTitle"
        android:layout_alignStart="@+id/eventTitle" />
</RelativeLayout>
